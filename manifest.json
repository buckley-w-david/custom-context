{
  "manifest_version": 2,
  "name": "Context menu: Custom Actions",
  "description": "Add a context menu option to run custom actions.",
  "version": "1.0",
  "homepage_url": "https://github.com/buckley-w-david/custom-context",

  "icons": {
    "16": "icons/play.svg",
    "32": "icons/play.svg",
    "48": "icons/play.svg"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "custom-context@davidbuckley.ca",
      "strict_min_version": "50.0"
    }
  },

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "permissions": [
    "activeTab",
    "contextMenus",
    "clipboardWrite",
    "nativeMessaging"
  ]
}
